<h1>Pokedex</h1>

<%= form_for :pokemon do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :img %><br>
    <%= f.text_field :img %>
  </p>
  <p>
    <%= f.label :height %><br>
    <%= f.text_field :height %>
  </p>
  <p>
    <%= f.label :weight %><br>
    <%= f.text_field :weight %>
  </p>
  <p>
    <%= f.label :candy %><br>
    <%= f.text_field :candy %>
  </p>
  <p>
    <%= f.label :candy_count %><br>
    <%= f.text_field :candy_count %>
  </p>
  <p>
    <%= f.label :egg %><br>
    <%= f.text_field :egg %>
  </p>
  <p>
    <%= f.label :avg_spawns %><br>
    <%= f.text_field :avg_spawns %>
  </p>
  <p>
    <%= f.label :spawn_time %><br>
    <%= f.text_field :spawn_time %>
  </p>
  <p>
    <%= f.submit 'update'%>
  </p>
<% end %>

<%= form_for :pokemon, url: {action: "delete"} do |f| %>
  <p>
    <%= f.submit 'delete' %>
  </p>
<% end %>